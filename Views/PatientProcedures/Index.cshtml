@model IEnumerable<SecondAid.Models.Health.PatientProcedure>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Procedure.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicationPrescribed.Name)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Procedure.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.MedicationPrescribed.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PatientProcedureId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PatientProcedureId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PatientProcedureId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
