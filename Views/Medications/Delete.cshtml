@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SecondAid.Resources.SharedResource> SharedLocalizer

@model SecondAid.Models.Health.Medication

@{
    ViewData["Title"] = Localizer["Delete Medication"];
}

<h2>@ViewData["Title"]</h2>

<h3>@Localizer["Are you sure you want to delete this medication?"]</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <a asp-action="Index" class="glyphicon glyphicon-arrow-left" title="Back to List"></a>
            <a asp-action="Index">@SharedLocalizer["Back to List"]</a> |
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </form>
</div>
