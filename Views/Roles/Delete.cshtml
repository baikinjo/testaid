@model Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityRole

@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SecondAid.Resources.SharedResource> SharedLocalizer

@{
    ViewBag.Title = Localizer["Delete Role"];
}

<h2>@ViewBag.Title</h2>
<h3>Role Name: @Model.Name</h3>
<h3>Are you sure you want to delete this role?</h3>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-actions no-color">
            <a asp-action="Index" class="glyphicon glyphicon-arrow-left" title="Back to List"></a>
            <a asp-action="Index">@SharedLocalizer["Back to Roles"]</a> |
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
