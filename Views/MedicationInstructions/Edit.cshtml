@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SecondAid.Resources.SharedResource> SharedLocalizer

@model SecondAid.Models.Health.MedicationInstruction

@{
    ViewData["Title"] = Localizer["Edit Medication Instruction"];
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MedicationInstructionId" />
        <div class="form-group">
            <label asp-for="MedicationId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="MedicationId" class="form-control" asp-items="ViewBag.MedicationId"></select>
                <span asp-validation-for="MedicationId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Instruction" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Instruction" class="form-control" />
                <span asp-validation-for="Instruction" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="glyphicon glyphicon-arrow-left" title="Back to List"></a>
    <a asp-action="Index">@SharedLocalizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
