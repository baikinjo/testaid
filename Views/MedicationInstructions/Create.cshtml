@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer Localizer

@model SecondAid.Models.Health.MedicationInstruction

@{
    ViewData["Title"] = Localizer["Create Medication Instruction"];
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="MedicationId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="MedicationId" class="form-control" asp-items="ViewBag.MedicationId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Instruction" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Instruction" class="form-control" ></textarea>
                <span asp-validation-for="Instruction" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="glyphicon glyphicon-arrow-left" title="Back to List"></a>
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
