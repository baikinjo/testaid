@model IEnumerable<SecondAid.Models.Health.Questionnaire>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.QuestionnaireId">Details</a> | 
                <a asp-area="" asp-controller="Questions" asp-action="Create">Add Questions</a>
            </td>
        </tr>
}
    </tbody>
</table>
